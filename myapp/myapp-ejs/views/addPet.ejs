<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/lib/bootstrap/dist/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/font-awesome.min.css' />
    <link rel='stylesheet' href='/stylesheets/ionicons.min.css' />
    <link rel='stylesheet' href='/lib/admin-lte/dist/css/AdminLTE.min.css' />
    <link rel='stylesheet' href='/lib/admin-lte/dist/css/skins/skin-blue.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">

    <% include header.ejs %>

    <% include menu.ejs %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Main content -->
      <section class="content">

        <!-- Horizontal Form -->
        <div class="box box-info">
          <div class="box-header with-border">
            <h3 class="box-title">添加<%= petListStr %>信息</h3>
          </div>
          <!-- /.box-header -->
          <!-- form start -->
          <form class="form-horizontal" enctype="multipart/form-data" action="/petList/addPetAction" method="post">
            <div class="box-body">
              <div class="form-group">
                <label for="petListType" class="col-sm-2 control-label">类型：</label>

                <div class="col-sm-8">
                  <input type="text" class="form-control" readonly name="petListType" placeholder="petListType" value="<%= petListType %>">
                </div>
              </div>
              <div class="form-group">
                <label for="petID" class="col-sm-2 control-label">宠物ID：</label>

                <div class="col-sm-8">
                  <input type="text" class="form-control"  name="petID" placeholder="宠物ID--如1,2,3..." value="">
                </div>
              </div>
              <div class="form-group">
                <label for="variety" class="col-sm-2 control-label">品种：</label>

                <div class="col-sm-8">
                  <input type="text" class="form-control"  name="variety" placeholder="品种" value="">
                </div>
              </div>
              <div class="form-group">
                <label for="age" class="col-sm-2 control-label">年龄：</label>

                <div class="col-sm-8">
                  <input type="text" class="form-control"  name="age" placeholder="年龄" value="">
                </div>
              </div>
              <div class="form-group">
                <label for="sex" class="col-sm-2 control-label">性别：</label>

                <div class="col-sm-8">
                  <input type="text" class="form-control"  name="sex" placeholder="性别" value="">
                </div>
              </div>
              <div class="form-group">
                <label for="area" class="col-sm-2 control-label">城市地区：</label>

                <div class="col-sm-8">
                  <input type="text" class="form-control"  name="area" placeholder="城市地区" value="">
                </div>
              </div>
              <div class="form-group">
                <label for="status" class="col-sm-2 control-label">领养状态：</label>

                <div class="col-sm-8">
                  <input type="text" class="form-control"  name="status" placeholder="领养状态" value="">
                </div>
              </div>
              <div class="form-group">
                <label for="imgUrl" class="col-sm-2 control-label">图片：</label>

                <div class="col-sm-8">
                  <input type="file" class="form-control"  value="" name="imgUrl">
                </div>
              </div>
              <div class="form-group">
                <label for="editor" class="col-sm-2 control-label">宠物简介：</label>

                <div class="col-sm-8">
                  <textarea id="editor1" name="editor" rows="10" class="form-control" placeholder="请输入宠物简介···" style="resize: none;">

                    </textarea>
                </div>
              </div>

                <% if(tip != ""){%>
                  <p style="text-align: center;"><%= tip %></p>
                <%  }%>

            </div>

            <!-- /.box-body -->
            <div class="box-footer">
              <button type="button" class="btn btn-default">
                <a href="/petList?petListType=<%= petListType %>">返回</a>
              </button>
              <button type="submit" class="btn btn-info pull-right" id="savaMovieBtn">
                保存
              </button>
            </div>
            <!-- /.box-footer -->
          </form>
        </div>


      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Main Footer -->
    <% include footer.ejs %>


    <!-- Add the sidebar's background. This div must be placed
         immediately after the control sidebar -->
    <div class="control-sidebar-bg"></div>
  </div>
  <!-- ./wrapper -->
  
  
  </body>
  <script src = "/javascripts/jquery.min.js"></script>
  <script src = "/lib/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src = "/lib/ckeditor/ckeditor.js"></script>
  <script src = "/javascripts/app.min.js"></script>
  <script>
      $(function () {
          // Replace the <textarea id="editor1"> with a CKEditor
          // instance, using default configuration.
          CKEDITOR.replace('editor1');
          //bootstrap WYSIHTML5 - text editor
          $(".textarea").wysihtml5();
      });
  </script>

</html>
