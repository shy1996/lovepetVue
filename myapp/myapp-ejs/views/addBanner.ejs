<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/lib/bootstrap/dist/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/font-awesome.min.css' />
    <link rel='stylesheet' href='/stylesheets/ionicons.min.css' />
    <link rel='stylesheet' href='/lib/admin-lte/dist/css/AdminLTE.min.css' />
    <link rel='stylesheet' href='/lib/admin-lte/dist/css/skins/skin-blue.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">

    <% include header.ejs %>

    <% include menu.ejs %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Main content -->
      <section class="content">

        <!-- Horizontal Form -->
        <div class="box box-info">
          <div class="box-header with-border">
            <h3 class="box-title">添加轮播图</h3>
          </div>
          <!-- /.box-header -->
          <!-- form start -->
          <form class="form-horizontal" action="/banner/addBannerAction" method="post">
            <div class="box-body">
              <div class="form-group">
                <label for="bannerID" class="col-sm-2 control-label">图片ID：</label>

                <div class="col-sm-8">
                  <input type="text" class="form-control" name="bannerID" placeholder="图片ID" value="">
                </div>
              </div>
              <div class="form-group">
                  <label for="bannerName" class="col-sm-2 control-label">图片名称：</label>

                <div class="col-sm-8">
                  <input type="text" class="form-control" name="bannerName" placeholder="图片名称" value="">
                </div>
              </div>
              <div class="form-group">
                <label for="bannerSrc" class="col-sm-2 control-label">图片路径：</label>

                <div class="col-sm-8">
                  <input type="flie" class="form-control" name="bannerSrc" placeholder="图片路径" value="">
                </div>
              </div>
              <div class="form-group">
                <label for="bannerLink" class="col-sm-2 control-label">图片连接地址：</label>

                <div class="col-sm-8">
                  <input type="text" class="form-control"  value="" name="bannerLink" placeholder="图片连接地址">
                </div>
              </div>

            </div>

            <!-- /.box-body -->
            <div class="box-footer">
              <button type="button" class="btn btn-default">
                <a href="/banner">返回</a>
              </button>
              <button type="submit" class="btn btn-info pull-right" id="savaMovieBtn">
                保存
              </button>
            </div>
            <!-- /.box-footer -->
          </form>
        </div>


      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Main Footer -->
    <% include footer.ejs %>


    <!-- Add the sidebar's background. This div must be placed
         immediately after the control sidebar -->
    <div class="control-sidebar-bg"></div>
  </div>
  <!-- ./wrapper -->
  
  
  </body>
  <script src = "/javascripts/jquery.min.js"></script>
  <script src = "/lib/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src = "/javascripts/app.min.js"></script>

</html>
